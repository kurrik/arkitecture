{
  "name": "arkitecture",
  "version": "0.1.0",
  "description": "A Domain Specific Language for generating SVG architecture diagrams with precise manual positioning control",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arkitecture": "./bin/arkitecture"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint {src,scripts}/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test:watch": "jest --watch",
    "dev": "tsc --watch",
    "golden:generate": "npm run build && node dist/scripts/generate-golden.js"
  },
  "keywords": [
    "svg",
    "architecture",
    "diagrams",
    "dsl",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/string-width": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "string-width": "^4.2.3"
  }
}